    <insert id="insertAdmin">
        insert into admin(id,name,gender,Birthday,Faculties,employ_time,Profession_title,Telephone,IDcard_type,IDcard_type,IDcard_number,password)
        values (#{id},#{name},#{gender},#{Birthday},#{Faculties},#{employ_time},#{Profession_title},#{Telephone},#{IDcard_type},#{IDcard_number},#{password})

    </insert>
    <update id="updateAdmin" parameterType="cn.edu.nchu.grimsys.domain.AbstrAdmin">
         update admin
         <set>
             <if test="admin!=null">
                 name=#{name},
                 gender=#{gender},
                 Birthday=#{Birthday},
                 Faculties=#{Faculties},
                 employ_time=#{employ_time},
                 Profession_title=#{Profession_title},
                 Telephone=#{Telephone},
                 IDcard_type=#{IDcard_type},
                 IDcard_number=#{IDcard_number},
                 password=#{password}

             </if>
         </set>
        <where>
            id=#{id}
        </where>
    </update>

    <delete id="deleteAdminByid">

    </delete>
    <delete id="deleteAdminById">
        delete from admin
        where id = #{adminNum}
    </delete>


    <!--<select id="selectAdminByid" resultType="cn.edu.nchu.grimsys.domain.impl.vision1.Admin" >
